<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ConstraintLayout1"
        android:layout_width="160dp"
        android:layout_height="132dp"
        android:background="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="66dp"
            android:layout_height="60dp"
            android:layout_marginStart="44dp"
            android:layout_marginTop="8dp"
            android:gravity="right|top"
            android:text="22"
            android:textColor="@color/white"
            android:textSize="48sp"
            app:layout_constraintBottom_toTopOf="@+id/textView8"
            app:layout_constraintStart_toEndOf="@+id/textView4"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.8" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="112dp"
            android:layout_height="28dp"
            android:layout_marginStart="13dp"
            android:layout_marginTop="8dp"
            android:gravity="right"
            android:text="衡陽路"
            android:textColor="@color/client_colors_2"
            android:textSize="24sp"
            app:layout_constraintStart_toEndOf="@+id/textView5"
            app:layout_constraintTop_toBottomOf="@+id/textView7" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="16dp"
            android:layout_height="18dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="31dp"
            android:text="往"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView4" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="113dp"
            android:layout_height="20dp"
            android:layout_marginStart="14dp"
            android:gravity="right"
            android:text="Hengyan Rd."
            android:textColor="@color/client_colors_2"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/textView6"
            app:layout_constraintTop_toBottomOf="@+id/textView8" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_marginStart="12dp"
            android:text="To"
            android:textColor="@color/white"
            android:textSize="10sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView5" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="37dp"
            android:layout_height="18dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="16dp"
            android:text="路 線"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="26dp"
            android:layout_height="12dp"
            android:layout_marginStart="12dp"
            android:text="Route"
            android:textColor="@color/white"
            android:textSize="10sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ConstraintLayout2"
        android:layout_width="160dp"
        android:layout_height="68dp"
        android:background="@color/client_colors_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ConstraintLayout1">

        <TextView
            android:id="@+id/textView13"
            android:layout_width="159dp"
            android:layout_height="35dp"
            android:background="@color/client_colors_1"
            android:gravity="bottom|center_horizontal"
            android:text="上下車收票"
            android:textColor="@color/white"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="159dp"
            android:layout_height="22dp"
            android:background="@color/client_colors_1"
            android:gravity="center_horizontal"
            android:text="Pay when Getting On and Off"
            android:textColor="@color/white"
            android:textSize="10sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView13" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ConstraintLayout3"
        android:layout_width="388dp"
        android:layout_height="138dp"
        app:layout_constraintStart_toEndOf="@+id/ConstraintLayout1"
        app:layout_constraintTop_toTopOf="parent">

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ConstraintLayout4"
        android:layout_width="385dp"
        android:layout_height="61dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:background="@drawable/background_gradient_0"
        app:layout_constraintEnd_toStartOf="@+id/ConstraintLayout5"
        app:layout_constraintStart_toEndOf="@+id/ConstraintLayout2"
        app:layout_constraintTop_toBottomOf="@+id/ConstraintLayout3">

        <TextView
            android:id="@+id/textView15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="56dp"
            android:gravity="center_horizontal"
            android:text="NEXT STOP:"
            android:textColor="@color/client_colors_3"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView16"
            android:layout_width="182dp"
            android:layout_height="25dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="48dp"
            android:layout_marginBottom="1dp"
            android:gravity="center_horizontal|bottom"
            android:text="Xinyi-Yongkang Intersection"
            android:textColor="@color/client_colors_2"
            android:textSize="12sp"
            app:layout_constraintBottom_toTopOf="@+id/textView17"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView17"
            android:layout_width="181dp"
            android:layout_height="22dp"
            android:layout_marginStart="18dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="21dp"
            android:gravity="center_horizontal"
            android:text="(MRT Dongmen Sta.)"
            android:textColor="@color/client_colors_2"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.49"
            app:layout_constraintStart_toEndOf="@+id/textView15"
            app:layout_constraintTop_toBottomOf="@+id/textView16" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ConstraintLayout5"
        android:layout_width="183dp"
        android:layout_height="200dp"
        android:layout_marginEnd="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <VideoView
            android:id="@+id/videoView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>